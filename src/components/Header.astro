---
import { Sparkles, Menu, Layers, Info, Home } from "@lucide/astro";
---

<header
  class="py-4 px-6 md:px-12 flex justify-between items-center bg-gradient-to-r from-green-50 to-green-100 shadow-md sticky top-0 z-50 backdrop-blur-sm bg-opacity-90"
>
  <div class="flex items-center">
    <h1
      class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-green-700 flex items-center gap-2"
    >
      <Home class="w-6 h-6 text-green-600" />
      WEBETU
    </h1>
  </div>
  <nav class="hidden md:flex space-x-8">
    <a
      href="#features"
      class="text-gray-700 hover:text-green-600 font-medium flex items-center gap-1 transition-all duration-300 ease-in-out hover:scale-105"
      ><Sparkles class="w-5 h-5" /> Features</a
    >
    <a
      href="#overview"
      class="text-gray-700 hover:text-green-600 font-medium flex items-center gap-1 transition-all duration-300 ease-in-out hover:scale-105"
      ><Layers class="w-5 h-5" /> Overview</a
    >
    <!-- <a
      href="#disclaimer"
      class="text-gray-700 hover:text-green-500 font-medium flex items-center gap-1 transition-all duration-300 hover:scale-105"
      ><Info class="w-5 h-5" /> Disclaimer</a
    > -->
  </nav>
  <button
    class="md:hidden text-gray-700 bg-white p-2 rounded-full shadow-sm hover:shadow-md transition-all duration-300 ease-in-out hover:scale-105"
  >
    <Menu class="w-6 h-6 text-green-600" />
  </button>
</header>
