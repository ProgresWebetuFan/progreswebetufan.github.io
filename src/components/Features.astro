---
import { Image } from "astro:assets";
import {
  UserCircle,
  Calendar,
  CheckCircle,
  Bell,
  BookOpen,
} from "@lucide/astro";
import appFeatures from "../assets/images/app-features.png";
import appEvents from "../assets/images/app-events.png";
---

<section
  id="features"
  class="py-16 px-6 md:px-12 bg-gradient-to-b from-white to-green-50"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <span
        class="inline-block bg-gradient-to-r from-green-100 to-green-200 text-green-700 text-sm font-medium px-4 py-1.5 rounded-full mb-3"
        >âœ¨ Powerful Features</span
      >
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-4 bg-gradient-to-r from-green-600 to-green-700 text-transparent bg-clip-text"
      >
        Key Features
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Discover what makes WEBETU the essential companion for university
        students
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <div
        class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-200 ease-in-out hover:-translate-y-1 border border-green-100 group overflow-hidden relative flex flex-col items-center text-center"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-green-50 to-green-100 opacity-0 group-hover:opacity-10 transition-opacity duration-300"
        >
        </div>
        <div
          class="bg-gradient-to-r from-green-100 to-green-200 p-3 rounded-full w-14 h-14 flex items-center justify-center mb-4 transform group-hover:scale-110 transition-transform duration-300"
        >
          <UserCircle class="h-8 w-8 text-green-600" />
        </div>
        <div
          class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-100 to-green-200 rounded-full transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"
        >
        </div>
        <h3 class="text-xl font-semibold mb-2 text-green-700">
          Student Profile
        </h3>
        <p class="text-gray-600 mb-4">
          Access and manage your personal information, academic records, and
          university ID in one place.
        </p>
      </div>

      <div
        class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-200 ease-in-out hover:-translate-y-1 border border-green-100 group overflow-hidden relative flex flex-col items-center text-center"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-green-50 to-green-100 opacity-0 group-hover:opacity-10 transition-opacity duration-300"
        >
        </div>
        <div
          class="bg-gradient-to-r from-green-100 to-green-200 p-3 rounded-full w-14 h-14 flex items-center justify-center mb-4 transform group-hover:scale-110 transition-transform duration-300"
        >
          <Calendar class="h-8 w-8 text-green-600" />
        </div>
        <div
          class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-100 to-green-200 rounded-full transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"
        >
        </div>
        <h3 class="text-xl font-semibold mb-2 text-green-700">
          Class Schedule
        </h3>
        <p class="text-gray-600 mb-4">
          View your daily and weekly class schedules, including room locations
          and professor information.
        </p>
      </div>

      <div
        class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-200 ease-in-out hover:-translate-y-1 border border-green-100 group overflow-hidden relative flex flex-col items-center text-center"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-green-50 to-green-100 opacity-0 group-hover:opacity-10 transition-opacity duration-300"
        >
        </div>
        <div
          class="bg-gradient-to-r from-green-100 to-green-200 p-3 rounded-full w-14 h-14 flex items-center justify-center mb-4 transform group-hover:scale-110 transition-transform duration-300"
        >
          <CheckCircle class="h-8 w-8 text-green-600" />
        </div>
        <div
          class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-100 to-green-200 rounded-full transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"
        >
        </div>
        <h3 class="text-xl font-semibold mb-2 text-green-700">
          Grades & Results
        </h3>
        <p class="text-gray-600 mb-4">
          Check your exam results, course grades, and academic progress in
          real-time.
        </p>
      </div>
    </div>

    <div class="mt-16 relative">
      <div
        class="bg-gradient-to-r from-green-50 via-blue-50 to-green-50 rounded-2xl p-8 md:py-12 overflow-hidden shadow-lg border border-green-100 relative"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-green-100 to-blue-100 opacity-5"
        >
        </div>
        <div class="grid md:grid-cols-2 gap-8 items-center relative z-10">
          <!-- Changed to 2 columns -->
          <div class="md:col-span-1">
            <!-- Features take half -->
            <h3
              class="text-2xl font-bold mb-4 bg-gradient-to-r from-green-700 to-blue-700 text-transparent bg-clip-text"
            >
              Additional Features
            </h3>
            <div class="space-y-4">
              <div
                class="bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition-all duration-200 ease-in-out hover:-translate-y-1 border border-green-100 group overflow-hidden flex items-center"
              >
                <div
                  class="bg-gradient-to-r from-green-100 to-blue-100 p-2 rounded-full w-10 h-10 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300"
                >
                  <Bell class="h-6 w-6 text-green-600" />
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-green-700">
                    Notifications
                  </h3>
                  <p class="text-gray-600">
                    Receive important announcements, deadline reminders, and
                    updates from your university.
                  </p>
                </div>
              </div>

              <div
                class="bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1 border border-blue-100 group overflow-hidden flex items-center"
              >
                <div
                  class="bg-gradient-to-r from-green-100 to-blue-100 p-2 rounded-full w-10 h-10 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300"
                >
                  <Calendar class="h-6 w-6 text-green-600" />
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-green-700">
                    Time Tables & Calendar
                  </h3>
                  <p class="text-gray-600">
                    View your daily and weekly class schedules, including room
                    locations and professor information.
                  </p>
                </div>
              </div>

              <div
                class="bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition-all duration-200 ease-in-out hover:-translate-y-1 border border-green-100 group overflow-hidden flex items-center"
              >
                <div
                  class="bg-gradient-to-r from-green-100 to-blue-100 p-2 rounded-full w-10 h-10 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300"
                >
                  <BookOpen class="h-6 w-6 text-green-600" />
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-green-700">
                    Student ID Card
                  </h3>
                  <p class="text-gray-600">
                    Access your digital student ID and important documents
                    anytime, anywhere.
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="flex justify-center md:col-span-1">
            <!-- Images take half -->
            <div class="grid md:grid-cols-2 gap-8 w-full max-w-[500px]">
              <!-- Reduced max-width and set 2 columns -->
              <div
                class="relative transform hover:scale-[1.01] transition-all duration-200 ease-in-out cursor-pointer"
              >
                <Image
                  src={appFeatures}
                  alt="WEBETU App Features"
                  loading="lazy"
                  class="rounded-xl shadow-lg z-10 relative hover:shadow-xl transition-all duration-300 w-full h-auto object-contain"
                />
                <div
                  class="absolute -bottom-2 -right-2 w-full h-full bg-gradient-to-br from-green-200 to-blue-200 rounded-xl z-0 transition-all duration-300 opacity-50 hover:opacity-70"
                >
                </div>
              </div>
              <div
                class="relative transform hover:scale-[1.01] transition-all duration-200 ease-in-out cursor-pointer"
              >
                <Image
                  src={appEvents}
                  alt="Mobile Interface"
                  loading="lazy"
                  class="rounded-xl shadow-lg z-10 relative hover:shadow-xl transition-all duration-300 w-full h-auto object-contain"
                />
                <div
                  class="absolute -bottom-2 -right-2 w-full h-full bg-gradient-to-br from-blue-200 to-green-200 rounded-xl z-0 transition-all duration-300 opacity-50 hover:opacity-70"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
